<div class="sort_menu col-xs-12 col-sm-12 col-lg-3">
  <div class="language col-xs-6 col-sm-6 col-lg-12">
    <p><i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i> Language</p>
    <ul>
      <%= link_to videos_path(request.query_parameters.merge(language: "french")) do %>
        <li><%= image_tag "french_flag.png", height: 25, width: 25, crop: :fill %></li>
      <% end %>
      <%= link_to videos_path(request.query_parameters.merge(language: "english")) do %>
        <li><%= image_tag "english_flag.png", height: 25, width: 25, crop: :fill %></li>
      <% end %>
      <li><%= link_to 'All', videos_path(:period => params[:period]), class: 'all_button' %></li>
    </ul>
  </div>
  <div class="category col-xs-6 col-sm-6 col-lg-12">
    <p><i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i> Category</p>
    <ul>
      <li><%= link_to 'Comedy', videos_path(:period => params[:period]), class: 'all_button' %></li>
      <li><%= link_to 'Art and Fun', videos_path(:period => params[:period]), class: 'all_button' %></li>
      <li><%= link_to 'Music', videos_path(:period => params[:period]), class: 'all_button' %></li>
    </ul>
  </div>
</div>
