<header class="header-11">
  <div class="container">
    <div class="row">
      <div class="navbar col-sm-12" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle"></button>
          <a class="brand" href="#"><img src="img/logo@2x.png" width="50" height="50" alt="">RisingTube</a>
        </div>
        <div class="collapse navbar-collapse pull-right">
          <ul class="nav pull-left">
            <li class="active"><a href="#">HOME</a></li>
            <li><a href="#">COMPANY</a></li>
            <li><a href="#">PORTFOLIO</a></li>
            <li><a href="#">BLOG</a></li>
            <li><a href="#">CONTACT</a></li>
          </ul>
          <% if current_user == nil %>
            <form class="navbar-form pull-left">
              <%= link_to "LOG IN", new_user_session_path, class:"btn btn-default btn-sm" %>
              <%= link_to "SIGN UP", new_user_registration_path, class:"btn btn-danger btn-sm" %>
            </form>
          <% else %>
            <form class="navbar-form pull-left">
              <%= link_to "MY PROFILE", edit_user_registration_path, class:"btn btn-default btn-sm" %>
              <%= link_to "LOG OUT", destroy_user_session_path, :method => :delete, class:"btn btn-danger btn-sm" %>
            </form>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</header>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>