<header class="header-11">
  <div class="container">
    <div class="row">
      <div class="navbar col-sm-12" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span> </button>

          <%= link_to "RisingTube", root_path, class:"brand" %>
        </div>
        <div class="navbar-collapse collapse pull-right" id="navbar-collapse">
          <ul class="nav pull-left">
            <li><a href="/pages/concept">THE CONCEPT</a></li>
            <li><a href="/pages/blog">BLOG</a></li>
            <li><a href="/pages/contact">CONTACT</a></li>
          </ul>
          <% if current_user == nil %>
            <form class="navbar-form pull-left">
              <%= link_to "LOG IN", new_user_session_path, class:"btn btn-default btn-sm" %>
              <%= link_to "SIGN UP", new_user_registration_path, class:"btn btn-danger btn-sm" %>
            </form>
          <% else %>
            <form class="navbar-form pull-left">
              <%= link_to "POST A VIDEO", new_video_path, class:"btn btn-primary btn-sm" %>
              <%= link_to "MY PROFILE", user_path(current_user), class:"btn btn-default btn-sm" %>
              <%= link_to "LOG OUT", destroy_user_session_path, :method => :delete, class:"btn btn-danger btn-sm" %>
            </form>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>