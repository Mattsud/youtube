<section class="price-1">
  <div class="container">
    <h2>Sign up</h2>
    <div class="row plans">
      <div class="center-block" style="width:400px;max-width:90%">
        <div class="first_line_menu col-xs-12">
          <div class="form_upload">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>
              <%= f.input :username, required: true, autofocus: true %>
              <%= f.input :email, required: true, autofocus: true %><br>
              <p class="confirmation"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %></p>
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, required: true %>
              <p class="post-button-form">
                <%= f.button :submit, "Sign up", class:"btn btn-danger post-button-form" %>
              </p>
          </div>
        </div>
        <div class="post-button-form">
          <p class="text_form">Already have an account ?</p>
          <%= link_to "Log in", new_session_path(resource_name), class:"btn btn-default btn-sm" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<% content_for :title, "Sign Up - RisingTube" %>

