<section class="price-1">
  <div class="container">
    <div class="heading">
      <h1>Every Youtuber deserves attention</h1>
      <p>Being discovered when you are a small Youtuber is hard
        <br>Post your video, get upvotes and start building a community
      </p>
      <p><%= link_to "POST A VIDEO", add_a_video_path, :class => "btn btn-primary post-button" %></p>
    </div>

    <% if params[:period] == "last_week" %>
      <h2>Last week best videos</h2>
      <%= render "shared/choose_language" %>
      <%= render "shared/content_last_week" %>
      <div class="date">
        <h2><i class="fa fa-arrow-up" aria-hidden="true"></i> <%= link_to "Current week", videos_path(request.query_parameters.merge(:period => "current_week")) %></h2>
      </div>
    <% else %>
      <h2>Best videos of the week</h2>
      <%= render "shared/choose_language" %>
      <%= render "shared/content_current_week" %>
      <div class="date">
        <h2><i class="fa fa-arrow-down" aria-hidden="true"></i> <%= link_to 'Last week', videos_path(request.query_parameters.merge(:period => "last_week")) %></h2>
      </div>
    <% end %>
  </div>
</section>




