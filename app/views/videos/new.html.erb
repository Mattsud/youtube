<section class="price-1">
  <div class="container">
    <div class="heading">
      <h1>Rules before uploading</h1>
      <p>Video from channel < 2500 subscribers
        <br>Original content (no TV show re-upload)
        <br>One video per user or channel / Day
        <br>On Youtube or Facebook</p>
    </div>
    <h2>Upload the video</h2>
    <div class="row plans">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="plan">
          <div class="first_line col-xs-12">
            <div class="form_upload">
              <%= simple_form_for @new_video do |f| %>
                <%= f.input :title %>
                <%= f.input :channel, label: "Channel name" %>
                <%= f.input :description, as: :text %>
                <%= f.association :plateform,
                            as: :select,
                            label: "Plateform",
                            checked: Plateform.pluck(&:id) %>
                <%= f.association :category,
                            as: :select,
                            label: "Category",
                            checked: Category.pluck(&:id) %>

                <%= f.input :link, label: "Video's link",
                                   hint: 'Example : https://www.youtube.com/watch?v=g-jwWYX7Jlo' %>
                <%= f.input :photo,
                            as: :file,
                            label: "Video's thumbnail" %>
                <%= f.hidden_field :user_id, value: current_user.id %>
            </div>
          </div>
          <div class="post-button-form">
           <%= f.button :submit, "Submit", class:"btn btn-danger post-button-form" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
